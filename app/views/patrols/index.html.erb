<h1 class="center">Patrols</h1>
<% if current_user.admin? %>
    <div class="text-right">
      <%= link_to 'Create New Patrol', new_patrol_path, class: 'btn btn-success ' %>
    </div>
<% end %>
<div class="card-columns">
  <% @patrols.each do |patrol| %>
      <div class="card">
        <div class="card-header">
          <%= patrol.name %>
          <small>(<%= pluralize(patrol.scouts.count, 'scout') %>)</small>
          <% if current_user.admin? %>
              <span class="pull-right">
                <%= link_to "<i class='fa fa-pencil fa-sm'></i>".html_safe, edit_patrol_path(patrol) %>
                <%= link_to "<i class='fa fa-trash fa-sm'></i>".html_safe, patrol,
                            method: :delete, data: {confirm: 'Are you sure?'} %>
                </span>
          <% end %>
        </div>
        <div class="card-block">
          <p class="card-text">
            <% patrol.scouts.each do |scout| %>
                <% if scout.position.id == 1 %>
                    <strong><%= link_to scout.name, scout %></strong><br/>
                <% else %>
                    <%= link_to scout.name, scout %><br/>
                <% end %>
            <% end %>
          </p>
        </div>
      </div>
  <% end %>
</div>
