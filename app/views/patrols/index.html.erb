<p id="notice"><%= notice %></p>

<h1>Patrols</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patrols.each do |patrol| %>
      <tr>
        <td><%= patrol.scouts.count %></td>
        <td><%= patrol.name %></td>
        <td><%= link_to 'Show', patrol %></td>
        <td><%= link_to 'Edit', edit_patrol_path(patrol) %></td>
        <td><%= link_to 'Destroy', patrol, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

