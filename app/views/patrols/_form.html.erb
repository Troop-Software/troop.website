<%= form_for(patrol, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= render 'shared/errors', obj: patrol %>

  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name of patrol', autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', patrols_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>