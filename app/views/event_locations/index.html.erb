<%= content_for(:title, 'Events Locations') %>
<% if current_user.role? :leader %>
    <div class="card col-md-12 ">
      <div class="card-header" data-background-color="dkblue">
        <h3 class="card-title ">Showing all Event Locations
          <span class="pull-right">
              <%= link_to '<i class="fa fa-plus" aria-hidden="true"></i>'.html_safe,
                          new_event_location_path %>
          </span>
        </h3>
      </div>
      <div class="card-content">
        <table id='event_locations' class="table table-responsive table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
          </tr>
          </thead>

          <tbody>
          <% @event_locations.each do |event_location| %>
              <tr>
                <td><%= link_to event_location.name, event_location %></td>
                <td><%= event_location.street %></td>
                <td><%= event_location.city %></td>
                <td><%= event_location.state %></td>
                <td><%= event_location.zip %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
<% end %>
<script>
    $('#event_locations').DataTable({});
</script>