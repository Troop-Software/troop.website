<%= content_for(:title, 'Youth Award Requirements') %>
<div class="col-sm-12">
  <div class="card">
    <div class="card-header" data-background-color="dkblue">
      <h4 class="card-title">Youth Award Listing
        <span class="pull-right">
        <%= link_to '<i class="fa fa-plus" aria-hidden="true"></i>'.html_safe, new_youth_award_requirement_path %>
          </span>
      </h4>
    </div>
    <div class="card-content">
      <table class="table table-responsive table-striped">
        <thead>
        <td>Award Name</td>
        <td>#</td>
        <td>Description</td>
        <td></td>
        </thead>
        <tbody>
        <% @youth_award_requirements.each do |requirement| %>
            <tr>
              <td><%= link_to requirement.youth_award.name, youth_award_path(requirement.youth_award_id) %></td>
            <td><%= requirement.req_num %></td>
              <td><%= requirement.description %></td>
              <td>
                <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe,
                            edit_youth_award_requirement_path(requirement) %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe,
                            requirement, method: :delete,
                            data: {confirm: 'Are you sure you want to delete this requirement?'},
                            class: '' if current_user.role? :leader_full %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>