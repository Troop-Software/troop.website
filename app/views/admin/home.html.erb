<h1>Admin</h1>
<div><%= @admin.count %> Users </div>

<div class="tw_pagination"><%= will_paginate %></div>
<table class="table table-striped table-inverse">
  <thead>
    <tr>
      <th>User Name</th>
      <th>Email</th>
      <th>Sign in count</th>
      <th>Last sign in</th>
      <th>last_sign_in_ip</th>
      <th>Failed attempts</th>
      <th>Locked at</th>
      <th>Admin?</th>
    </tr>
  </thead>
<tbody>

<% @admin.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.sign_in_count %></td>
    <td><%= l user.last_sign_in_at unless user.last_sign_in_at.blank? %></td>
    <td><%= user.last_sign_in_ip %></td>
    <td><%=  user.failed_attempts %></td>
    <td><%= l user.locked_at unless user.locked_at.blank? %></td>
    <td><%= user.admin? %></td>

  </tr>
<% end %>
</tbody>
</table>
<div class="tw_pagination"><%= will_paginate %></div>
