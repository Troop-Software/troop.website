<%= content_for(:title, 'Admin Area - File Uploads') %>

<div class="row">
  <%= link_to 'Upload New File', new_admin_file_upload_path, class: 'btn btn-primary btn-round col-xs-5 col-xs-offset-6' %>
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="rose">
        <i class="fa fa-file fa-2x"></i>
      </div>
      <div class="card-content">
        <h4 class="card-title">File Uploads</h4>
        <table class="table table-striped table-no-bordered table-hover" cellspacing="0">
          <thead>
          <tr>
            <th class="hidden-xs">User Name</th>
            <th>File</th>
            <th class="text-right">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @admin_file_uploads.each do |admin_file_upload| %>
              <tr>
                <td class="hidden-xs"><%= admin_file_upload.user.username %></td>
                <td><%= admin_file_upload.file_file_name %></td>
                <td class="text-right">
                  <%= link_to 'Delete', admin_file_upload, method: :delete,
                              class: 'btn btn-danger btn-sm',
                              data: {confirm: 'Are you sure you wish to delete this file?}'} %>
                  <%= link_to 'Import', import_file_admin_file_uploads_path(id: admin_file_upload.id, name: admin_file_upload.file_file_name), class: 'btn btn-warning btn-sm btn-round' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


