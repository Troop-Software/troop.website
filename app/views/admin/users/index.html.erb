<%= content_for(:title, 'Admin Area - Users') %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="rose">
        <i class="fa fa-users fa-2x"></i>
      </div>
      <div class="card-content">
        <h4 class="card-title">Users</h4>
        <table class="table table-striped table-no-bordered table-hover" cellspacing="0">
          <thead>
          <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Sign in count</th>
            <th>Last sign in</th>
            <th>last_sign_in_ip</th>
            <th>Failed attempts</th>
            <th>Locked at</th>
            <th>Roles</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.sign_in_count %></td>
                <td><%= l user.last_sign_in_at unless user.last_sign_in_at.blank? %></td>
                <td><%= user.last_sign_in_ip %></td>
                <td><%= user.failed_attempts %></td>
                <td><%= l user.locked_at unless user.locked_at.blank? %></td>
                <td><%= user.roles.map(&:name).join ',' %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

