<%= content_for(:title, 'Admin Area - Users') %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="rose">
        <i class="fa fa-users fa-2x"></i>
      </div>
      <div class="card-content">
        <h4 class="card-title">Users</h4>
        <table class="table table-striped table-no-bordered table-hover" cellspacing="0">
          <thead>
          <tr>
            <th>User Name</th>
            <th class="hidden-xs">Email</th>
            <th>Roles</th>
            <th></th>
          </tr>
          </thead>
            <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= link_to user.username, admin_user_path(user) %></td>
                <td class="hidden-xs"><%= user.email %></td>
                <td><%= user.roles.map(&:name).join ',' %></td>
                <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure you wish to delete this user?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

