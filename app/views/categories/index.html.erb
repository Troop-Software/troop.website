<%= content_for(:title, 'Categories') %>
<% if (current_user.role? :leader_full)%>
    <div class="text-right">
      <%= link_to 'Create New Category', new_category_path, remote: true, class: 'btn btn-warning ' %>
    </div>
<% end %>
<div class="row">
  <% @categories.each do |category| %>
      <div class="col-sm-6">
        <div class="card card-plain">
          <div class="card-header" data-background-color="dkblue">
            <h4 class="card-title"><span id="category_name_<%= category.id %>"><%= category.name %></span>
              <% if current_user.role? :leader_full%>
              <span class="pull-right">
                <%= link_to "<i class='material-icons' data-toggle='tooltip' title='Edit Category'>create</i>".html_safe, edit_category_path(category), remote: true %>
                <%= link_to "<i class='material-icons' data-toggle='tooltip' title='Delete Category'>delete</i>".html_safe, category,
                            method: :delete, data: {confirm: "Are you sure you wish to delete #{category.name}?"} %>
                </span>
              <% end %>
            </h4>
          </div>
        </div>
      </div>
  <% end %>
</div>


