<%= form_for(@adult_position, :html => {class: 'form-horizontal', id: 'adult_position', role: 'form'}) do |f| %>
    <%= render 'shared/errors', obj: @adult_position %>

    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name of position', autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :abbr %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :abbr, class: 'form-control', placeholder: 'Position abbreviation', autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', adult_positions_path, class: 'btn btn-secondary' %>
      </div>
    </div>
<% end %>
<script>
    $(document).ready(function () {
        $("#adult_position").validate({
            rules: {
                "adult_position[name]": {
                    required: true,
                    rangelength: [5, 50]
                },
                "adult_position[abbr]": {
                    required: true,
                    rangelength: [3, 5]
                }
            },
            errorPlacement: function (error, element) {
                $(element).parent('div').parent('div').addClass('has-error');
                $(element).after(error);
            }
        });
    });
</script>