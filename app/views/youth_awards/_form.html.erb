<%= form_for(@youth_award, :html => {class: 'form-horizontal', id: 'youth_award', role: 'form'}) do |f| %>
    <%= render 'shared/errors', obj: @youth_award %>

    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name of award', autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Description of Award' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="togglebutton col-sm-6 col-sm-offset-4">
        <label>
          <%= f.check_box :multiple %>
          Can earn multiple times
        </label>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', youth_awards_path, class: 'btn btn-secondary' %>
      </div>
    </div>

<% end %>