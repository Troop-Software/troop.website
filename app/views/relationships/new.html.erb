<%= content_for(:title, 'Admin Area - New Relationship') %>
<div class="card col-sm-6 col-sm-offset-2">
  <div class="row">
    <div class="card-header" data-background-color="rose">
      <h4>Associate User to Scout</h4>
    </div>
    <div class="card-content">
      <div class="row">
        <div class="col-sm-12">
          <%= form_for @relationship, :html => {class: 'form-horizontal', role: 'form'} do |f| %>
              <%= render '/shared/errors', obj: @relationship %>

              <% if @relationship.new_record? %>
                  <div class="form-group row">
                    <div class="control-label col-sm-2">
                      <%= f.label :username %>
                    </div>
                    <div class="col-sm-8">
                      <%= f.select :user_id, options_for_select(User.all.map { |u| [u.username, u.id] }, @relationship.user_id), {}, class: 'form-control' %>
                    </div>
                  </div>
              <% else %>
                  <%= f.hidden_field :user_id, value: @relationship.user_id %>
              <% end %>

              <div class="form-group row">
                <div class="col-sm-2">
                  <%= f.label :scout %>
                </div>
                <div class="col-sm-8">
                  <%= f.select :scout_id, options_for_select(Scout.where(active: true).map { |s| [s.name, s.id] }, @relationship.scout_id), {}, class: 'form-control' %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit class: 'btn btn-primary' %>
                  <%= link_to 'Cancel', relationships_path, class: 'btn btn-secondary' %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>