<div class="box">
  <div class="form-group row">
    <div class="control-label col-sm-3">
      <%= f.label 'Address Line 1' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :line1, class: 'form-control', placeholder: 'Address Line #1' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-3">
      <%= f.label 'Address Line 2' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :line2, class: 'form-control', placeholder: 'Address Line #2' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-3">
      <%= f.label :city %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :city, class: 'form-control', placeholder: 'City' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-3">
      <%= f.label :state %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :state, :size => 2, class: 'form-control', placeholder: 'State' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-3">
      <%= f.label :zip, 'Zip Code' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :zip, class: 'form-control', placeholder: 'Zip code' %>
    </div>
  </div>
</div>