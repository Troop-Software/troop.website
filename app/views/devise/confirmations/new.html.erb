<h2 class="center">Resend confirmation instructions</h2>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(resource, :html => {class: 'form-horizontal'},
                 as: resource_name,
                 url: confirmation_path(resource_name),
                 html: {method: :post}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: 'form-control', autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit 'Resend confirmation instructions', class: 'btn btn-primary btn-lg' %>
          </div>
        </div>

    <% end %>
  </div>
</div>