<h2 class="center">Sign up</h2>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(resource, :html => {class: 'form-horizontal', role: 'form'},
                 as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :username %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :username, class: 'form-control', placeholder: 'Enter your name', autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email address'%>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
            <%= link_to "Log in", new_session_path(resource_name) %>
          </div>
        </div>

    <% end %>

  </div>
</div>