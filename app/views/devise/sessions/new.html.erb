<h2 class="center">Log in</h2>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(resource, :html => {class: 'form-horizontal', role: 'form'},
                 as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email address'%>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
            <%= link_to "Sign up", new_registration_path(resource_name) %>
          </div>
        </div>

    <% end %>
    <div class="row">
      <div class="center">
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br/>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
      </div>
    </div>
  </div>
</div>
