<% if user_signed_in? %>
    <h1><%= content_for(:title, 'Home Page') %></h1>
    <div class="row">
      <div class="pull-right">
        <%= link_to 'View all articles', articles_path , class: 'btn btn-warning btn-sm'%>
      </div>
    </div>
    <%= render 'articles/article_homepage', obj: @articles %>
    <div class="tw_pagination"><%= will_paginate @articles %></div>
<% else %>
    <div class="jumbotron">
      <h1>hello</h1>
      <%= link_to 'Sign up now', new_user_registration_path, class: 'btn btn-primary btn-large' %>
      <%= link_to 'Log in now', new_user_session_path, class: 'btn btn-primary btn-large' %>
    </div>
<% end %>