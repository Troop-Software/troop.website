<%= form_for(article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
    <%= render 'shared/errors', obj: article %>
      <div class="col-md-8">
        <div class="card">
          <div class="card-header" data-background-color="dkblue">
            <h4>Article Body</h4>
          </div>
          <div class="card-content">
            <div class="form-group" style="margin-top: 0">
              <div class="col-md-12">
                <%= f.bootsy_area :description, rows: 20, class: 'form-control', placeholder: 'Body of article' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header" data-background-color="dkblue">
            <h4>Article Properties</h4>
          </div>
          <div class="card-content">
            <div class="form-group row">
              <div class="control-label col-sm-2">
                <%= f.label :title %>
              </div>
              <div class="col-sm-8">
                <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
              </div>

              <div class="form-group row ">
                <div class="col-sm-offset-2 col-sm-8 checkbox">
                  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                      <% cb.label(class: 'checkbox-inline') { cb.check_box(class: '') + cb.text } %>
                  <% end %>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit class: 'btn btn-primary' %>
                  <%= link_to 'Cancel', articles_path, class: 'btn btn-secondary' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
<% end %>

