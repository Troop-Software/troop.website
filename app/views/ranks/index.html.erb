<h1 class="center">Ranks</h1>
<% if current_user.admin? %>
    <div class="text-right">
      <%= link_to 'Create New Rank', new_rank_path, class: 'btn btn-success ' %>
    </div>
<% end %>
<div class="card-columns">
  <% @ranks.each do |rank| %>
      <div class="card ">
        <div class="card-header">
          <%= rank.name %>
          <small>(<%= pluralize(rank.scouts.count, 'scout') %>)</small>
          <% if current_user.admin? %>
              <span class="pull-right">
                <%= link_to "<i class='fa fa-pencil fa-sm'></i>".html_safe, edit_rank_path(rank) %>
                <%= link_to "<i class='fa fa-trash fa-sm'></i>".html_safe, rank,
                            method: :delete, data: {confirm: 'Are you sure?'} %>
                </span>
          <% end %>
        </div>
        <div class="card-block">
          <p class="card-text">
            <% rank.scouts.each do |scout| %>
                <%= link_to scout.name, scout %><br/>
            <% end %>
          </p>
        </div>
      </div>
  <% end %>
</div>


