<div class="row">
  <div class="col-sm-12">
    <%= form_for(@requirement, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
        <%= render 'shared/errors', obj: @requirement %>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :revision %>
          </div>
          <div class="col-sm-8">
            <%= f.number_field :revision, class: 'form-control', autofocus: true , value: '2016'  %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :rank_id %>
          </div>
          <div class="col-sm-4">
            <%= f.select :rank_id, options_for_select(Rank.all.map { |r| [r.name, r.id] }, @requirement.rank_id),{}, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :category %>
          </div>
          <div class="col-sm-4">
            <%= f.select :req_category, options_for_select(Requirement.req_categories.map {|k, v| [k.humanize, k]}) %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :requirement_number %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :req_num, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :requirement %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :description, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary' %>
            <%= link_to 'Cancel', requirements_path, class: 'btn btn-secondary' %>
          </div>
        </div>
    <% end %>
  </div>
</div>