<%= content_for(:title, 'Notifications') %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header card-header-icon" data-background-color="dkblue">
        <i class="fa fa-bell fa-2x" aria-hidden="true"></i>
      </div>
      <div class="card-content">
        <h4 class="card-title">Notifications
        <span class="pull-right">
          <%= link_to 'Add', new_notification_path %>
        </span></h4>
        <table class="table table-striped table-no-bordered table-hover" cellspacing="0">
          <thead>
          <tr>
            <th>Text</th>
            <th class="hidden-xs">Link</th>
            <th>Display Until</th>
            <th class="hidden-xs">Active</th>
            <th class="text-right">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @notifications.each do |notice| %>
          <tr>
            <td><%= notice.text %></td>
            <td class="hidden-xs"><%= notice.link %></td>
            <td><%= notice.display_until %></td>
            <td class="hidden-xs"><%= notice.active %></td>
            <td class="text-right">
              <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_notification_path(notice) %>
              <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, notification_path(notice), method: :delete,
                          data: {confirm: 'Are you sure you want to delete this notice?'},
                          class: 'text-danger' %>
            </td>
            <% end %>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
