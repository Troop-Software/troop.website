<div class="row">
  <div class="col-sm-12">
    <%= form_for(event, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
        <%= render 'shared/errors', obj: event %>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :title, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :description %>
          </div>
          <div class="col-sm-6">
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :allDay %>
          </div>
          <div class="col-sm-6">
            <%= f.check_box :allDay, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :start %>
          </div>
          <div class="col-sm-5">
            <%= f.text_field :start, class: 'form-control datetimepicker ', data: {date: event.start,  date_format: 'YYYY-MM-DD hh:mm A'} %>

          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :end %>
          </div>
          <div class="col-sm-5">
            <%= f.text_field :end, class: 'form-control datetimepicker ', data: {date: event.end, date_format: 'YYYY-MM-DD hh:mm A'} %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :category %>
          </div>
          <div class="col-sm-5">
            <%= f.number_field :category %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :external_link %>
          </div>
          <div class="col-sm-5">
            <%= f.text_field :external_link %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-5 col-sm-offset-3">
          <%= f.submit %>
          </div>
        </div>
    <% end %>
  </div>
</div>