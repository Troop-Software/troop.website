<div class="row">
  <div class="col-sm-12">
    <%= form_for(scout_requirement, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
        <%= render 'shared/errors', obj: scout_requirement %>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :scout_id %>
          </div>
          <div class="col-sm-8">
            <%= f.select :scout_id, options_for_select(Scout.all.map { |s| [s.name, s.id] }, scout_requirement.scout_id), {}, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">

          <div class="control-label col-sm-2">
            <%= f.label :requirement_id %>
          </div>
          <div class="col-sm-8">
            <%= f.select :requirement_id, options_for_select(Requirement.all.map { |r| ["#{r.req_num}", r.id] }, scout_requirement.requirement_id), {}, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :sign_off %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :sign_off, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :completed_date %>
          </div>
          <div class="col-sm-8">
            <%= f.date_field :completed_date, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary' %>
            <%= link_to 'Cancel', scout_requirements_path, class: 'btn btn-secondary' %>
          </div>
        </div>
    <% end %>
  </div>
</div>


