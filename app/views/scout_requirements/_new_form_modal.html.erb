<div class="modal fade" id='<%= "#{@scout.id}-#{scout_requirement.requirement_id}" %>'
     tabindex="-1" role="dialog" aria-labelledby='myModalLabel<%= "#{@scout.id}-#{scout_requirement.requirement_id}" %>'>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header alert-info">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id='myModalLabel<%= "#{@scout.id}-#{scout_requirement.requirement_id}" %>'>
          Sign off on <br/>Requirement #<%= scout_requirement.requirement.req_num %> for <%= @scout.name %></h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <%= form_for(scout_requirement, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
                <%= render 'shared/errors', obj: scout_requirement %>
                <%= f.hidden_field :scout_id %>
                <%= f.hidden_field :requirement_id %>
                <div class="form-group row">
                  <div class="control-label col-sm-2">
                    <%= f.label :sign_off %>
                  </div>
                  <div class="col-sm-8">
                    <% if f.object.new_record? %>
                        <%= f.text_field :sign_off, class: 'form-control', value: current_user.username %>
                    <% else %>
                        <%= f.text_field :sign_off, class: 'form-control' %>
                    <% end %>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="control-label col-sm-2">
                    <%= f.label :completed_date %>
                  </div>
                  <div class="col-sm-8">
                    <%= f.date_field :completed_date, class: 'form-control' %>
                  </div>
                </div>
                <div class="modal-footer">
                  <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                      <%= f.submit class: 'btn btn-primary' %>
                      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                  </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>