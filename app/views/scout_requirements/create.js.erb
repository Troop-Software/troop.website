<% unless @scout_requirement.requirement.bor.nil? %>
$('#dialog').on('hidden.bs.modal', function () {
    location.reload();
});
<% end %>
$('#dialog').modal('toggle');
$('#completed_date_<%= @scout_requirement.requirement.id %>').contents().last().replaceWith("<%= date_for_display(@scout_requirement.completed_date) %>");
$('#sign_off_<%= @scout_requirement.requirement.id %>').contents().last().replaceWith('<%= (@scout_requirement.sign_off) %>');
$('#req_link_<%= @scout_requirement.requirement.id %>').replaceWith('<span id="req_link_<%= @scout_requirement.requirement.id %>"><%= @scout_requirement.requirement.req_num %></span>');
$('#progress').replaceWith('<span id="progress"><div class="progress-bar progress-bar-dkblue progress-bar-striped" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%= number_to_percentage(@scout_requirement.scout.rank_completion, precision: 0) %>;"><%= number_to_percentage(@scout_requirement.scout.rank_completion, precision: 0) %> </div></span>');
