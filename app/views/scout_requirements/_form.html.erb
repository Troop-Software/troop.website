<div class="row">
  <div class="col-sm-12">
    <%= form_for(scout_requirement, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
        <%= render 'shared/errors', obj: scout_requirement %>
        <%= f.fields_for :requirement do |r| %>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= r.label :requirement %>
          </div>
          <div class="col-sm-8">
            <%= r.text_area :description, class: 'form-control', :readonly => true%>
          </div>
        </div>
        <% end %>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :sign_off %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :sign_off, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="control-label col-sm-2">
            <%= f.label :completed_date %>
          </div>
          <div class="col-sm-8">
            <%= f.date_field :completed_date, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary' %>
            <%= link_to 'Cancel', scout_requirements_path, class: 'btn btn-secondary' %>
          </div>
        </div>
    <% end %>
  </div>
</div>