<%= content_for(:title, 'BSA Adult Trainings Offered') %>
<div class="col-sm-10 col-sm-offset-1">
  <div class="card">
    <div class="card-header" data-background-color="dkblue">
      <h4 class="card-title">Trainings</h4>
    </div>
    <div class="card-content">
      <table id="atc_list" class="table table-responsive table-striped">
        <thead>
        <th>BSA Code</th>
        <th>Course Name</th>
        <th>Course Retired</th>
        </thead>
        <tbody>
        <% @atcs.each do |atc| %>
            <tr class="<%= 'danger' if atc.expired %>">
              <td><%= atc.bsa_code %></td>
              <td><%= atc.name %></td>
              <td><%= date_for_display(atc.expired) %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
  $('#atc_list').DataTable({
      "order": [[1, "desc"]],
  });
</script>